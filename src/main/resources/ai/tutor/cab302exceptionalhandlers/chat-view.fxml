<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<BorderPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <!-- Top Region -->
    <top>
        <HBox maxHeight="65.0" maxWidth="960.0" prefHeight="65.0" prefWidth="956.0" spacing="10" style="-fx-background-color: #535353;">
            <!-- Pane to match sidebar width and color -->
            <Pane prefHeight="65.0" prefWidth="241.0" style="-fx-background-color: #535353;" HBox.hgrow="NEVER">
            <children>
               <Button fx:id="updateChatNameButton1" layoutX="20.0" layoutY="12.0" prefHeight="39.0" prefWidth="39.0" style="-fx-padding: 3; -fx-background-color: white;">
                  <graphic>
                     <ImageView fitHeight="34.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/return.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button fx:id="updateChatNameButton11" layoutX="136.0" layoutY="11.0" prefHeight="39.0" prefWidth="39.0" style="-fx-padding: 3; -fx-background-color: white;">
                  <graphic>
                     <ImageView fitHeight="34.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/search.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button fx:id="updateChatNameButton111" layoutX="189.0" layoutY="11.0" prefHeight="39.0" prefWidth="39.0" style="-fx-padding: 3; -fx-background-color: white;">
                  <graphic>
                     <ImageView fitHeight="34.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@images/addChat.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
            </children></Pane>
            <!-- Pane for the top bar content -->
            <Pane prefHeight="65.0" prefWidth="711.0" style="-fx-background-color: #213355;" HBox.hgrow="NEVER">
                <children>
                    <HBox alignment="CENTER_LEFT" layoutX="20.0" prefHeight="62.0" prefWidth="669.0" spacing="10" style="-fx-padding: 0;" HBox.hgrow="NEVER">
                        <ImageView fitHeight="29.0" fitWidth="40.0" nodeOrientation="INHERIT" HBox.hgrow="NEVER" />
                        <Button fx:id="updateChatNameButton" prefHeight="26.0" prefWidth="25.0" style="-fx-padding: 3; -fx-background-color: white;" HBox.hgrow="NEVER">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/edit.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                        <TextField fx:id="chatNameField" prefHeight="46.0" prefWidth="278.0" promptText="Quiz Whiz" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-background-insets: 0; -fx-border-insets: 0; -fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: white; -fx-prompt-text-fill: white; -fx-padding: 0;" styleClass="editable-title" stylesheets="@styles.css" HBox.hgrow="ALWAYS" />
                        <Region nodeOrientation="RIGHT_TO_LEFT" HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                              <TextField prefHeight="31.0" prefWidth="127.0" promptText="Search..." style="-fx-background-radius: 10 0 0 10; -fx-padding: 7 0 7 8; -fx-background-color: white;" HBox.hgrow="NEVER" />
                              <Button alignment="CENTER" prefHeight="30.0" prefWidth="35.0" style="-fx-background-color: white; -fx-border-radius: 0; -fx-background-radius: 0;" HBox.hgrow="NEVER">
                           <graphic>
                              <ImageView fitHeight="13.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/search2.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button alignment="CENTER" prefHeight="30.0" prefWidth="35.0" style="-fx-background-color: white; -fx-border-radius: 0; -fx-background-radius: 0; -fx-padding: 0; -fx-border-radius: 0 10 10 0; -fx-background-radius: 0 8 8 0;">
                           <graphic>
                              <ImageView fitHeight="29.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/settings.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
            </Pane>
        </HBox>
    </top>

    <!-- Left Region (Sidebar) -->
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #535353; -fx-padding: 10;" VBox.vgrow="ALWAYS">
            <!-- Chat List -->
            <StackPane fx:id="chatListContainer" prefWidth="230.0">
                <ListView styleClass="chat-list" fx:id="chatsListView" prefHeight="429.0" prefWidth="230.0" style="-fx-background-color: #535353; -fx-padding: 10;" VBox.vgrow="ALWAYS" />
                <TextField fx:id="noChatsField" text="You currently have no past chats" style="-fx-background-color: #535353; " editable="false" visible="false" />
            </StackPane>
            <!-- User Details Button -->
            <VBox prefHeight="46.0" prefWidth="248.0" style="-fx-background-color: #535353; -fx-padding: 10;">
                <Button maxWidth="Infinity" prefHeight="45.0" prefWidth="228.0" style="-fx-background-color: #6C95DF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;" text="User Details" />
            </VBox>
        </VBox>
    </left>

    <!-- Center Region (Chat Area) -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white;" VBox.vgrow="ALWAYS">
            <!-- Chat Section -->
            <ListView fx:id="messagesListView" style="-fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS" />
            <!-- Chat Input -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 10; -fx-border-color: #757575; -fx-border-radius: 8; -fx-background-color: white; -fx-border-width: 1; -fx-background-radius: 8;">
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                      <TextField fx:id="messageInputField" promptText="Enter Message..." style="-fx-background-insets: 0; -fx-border-insets: 0; -fx-border-color: white; -fx-background-color: transparent; -fx-prompt-text-fill: #757575; -fx-font-size: 12;" HBox.hgrow="ALWAYS" />
                       <Button style="-fx-background-color: #D3D3D3; -fx-padding: 5;">
                     <graphic>
                        <ImageView fitHeight="28.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/upload.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button prefHeight="25.0" prefWidth="55.0" style="-fx-background-color: #6C95DF; -fx-text-fill: white; -fx-background-radius: 5;" text="Chat" />
                    <Button prefHeight="27.0" prefWidth="55.0" style="-fx-background-color: white; -fx-border-radius: 5; -fx-border-color: #757575;" text="Quiz" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
