<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ai.tutor.cab302exceptionalhandlers.controller.ChatController">

    <!-- Left Sidebar -->
    <left>
        <!-- Other Chat Options -->
        <VBox fx:id="previousChats" >
            <ListView style="-fx-background-color: #333333; -fx-padding: 10;">

            </ListView>
            <!-- User Details -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-background-color: #333333; -fx-padding: 10;">
                <Button maxWidth="-Infinity" onAction="#handleUserDetails" text="User Details" />
            </VBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox prefHeight="396.0" prefWidth="445.0" spacing="10" style="-fx-padding: 20;">
            <!-- Chat Section -->
                <ListView id="messagesListView">

                </ListView>


            <!-- Chat Input -->

            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 10; -fx-border-color: #000000;">
                <TextField fx:id="messageField" promptText="Enter Message..." HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_LEFT" spacing="10">

                    <Button text="Chat" />
                    <Button text="Quiz" />
                    <Button text="Upload File" />
                </HBox>
            </VBox>

        </VBox>
    </center>

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #336699; -fx-padding: 10;">
            <ImageView fitHeight="30" fitWidth="30" />
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Chat Title" textAlignment="CENTER" alignment="TOP_CENTER" />
            <Region HBox.hgrow="ALWAYS">
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Region>
            <TextField promptText="Search..." style="-fx-background-radius: 15; -fx-padding: 5;" alignment="TOP_RIGHT"/>
            <Button text="🔍" alignment="TOP_RIGHT"/>
        </HBox>
    </top>

</BorderPane>
