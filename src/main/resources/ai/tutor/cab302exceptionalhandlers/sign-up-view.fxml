<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="usernameField" promptText="Username..." onKeyReleased="#onFieldChanged"/>
    <TextField fx:id="passwordField" promptText="Password..." onKeyReleased="#onFieldChanged"/>
    <TextField fx:id="confirmPasswordField" promptText="Confirm Password..." onKeyReleased="#onFieldChanged"/>
    <Button fx:id="signUpButton" text="Sign Up" onAction="#onSignUp" disable="true"/>
</VBox>

