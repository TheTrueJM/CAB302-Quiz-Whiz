<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@QuizStyles.css" />
    </stylesheets>
    <!-- Top Region -->
    <top>
        <HBox maxHeight="65.0" maxWidth="960.0" prefHeight="65.0" prefWidth="956.0" spacing="10" style="-fx-background-color: #535353;">
            <!-- Pane to match sidebar width and color -->
            <Pane prefHeight="65.0" prefWidth="241.0" style="-fx-background-color: #535353;" HBox.hgrow="NEVER">
                <children>
                    <Button fx:id="returnButton" layoutX="20.0" layoutY="12.0" prefHeight="39.0" prefWidth="39.0" style="-fx-padding: 3; -fx-background-color: white; -fx-cursor: hand;" styleClass="return-button">
                        <graphic>
                            <ImageView fitHeight="34.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@images/return.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="searchButton" layoutX="190.0" layoutY="13.0" prefHeight="39.0" prefWidth="39.0" style="-fx-padding: 3; -fx-background-color: white; -fx-cursor: hand;" styleClass="search-button" />
                      <ImageView fitHeight="34.0" fitWidth="35.0" layoutX="192.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@images/search.png" />
                          </image>
                      </ImageView>
                </children></Pane>
            <!-- Pane for the top bar content -->
            <Pane prefHeight="65.0" prefWidth="711.0" style="-fx-background-color: #213355;" HBox.hgrow="NEVER">
                <children>
                    <HBox alignment="CENTER_LEFT" layoutX="-1.0" prefHeight="62.0" prefWidth="690.0" spacing="10" style="-fx-padding: 0;" HBox.hgrow="NEVER">
                        <ImageView fitHeight="29.0" fitWidth="3.0" nodeOrientation="INHERIT" HBox.hgrow="NEVER" />
                        <TextField fx:id="quizNameField" editable="false" prefHeight="46.0" prefWidth="421.0" promptText="Enter chat name" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-background-insets: 0; -fx-border-insets: 0; -fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: white; -fx-prompt-text-fill: white; -fx-padding: 0;" styleClass="editable-title" stylesheets="@ChatStyles.css" text="Quiz Whiz" HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField prefHeight="31.0" prefWidth="127.0" promptText="Search..." style="-fx-background-radius: 10 0 0 10; -fx-padding: 7 0 7 8; -fx-background-color: white;" HBox.hgrow="NEVER" />
                                <Button alignment="CENTER" prefHeight="30.0" prefWidth="35.0" style="-fx-background-color: white; -fx-border-radius: 0; -fx-background-radius: 0; -fx-cursor: hand;" HBox.hgrow="NEVER">
                                    <graphic>
                                        <ImageView fitHeight="13.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@images/search2.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="quizSettingsButton" alignment="CENTER" prefHeight="30.0" prefWidth="35.0" style="-fx-background-color: white; -fx-border-radius: 0; -fx-background-radius: 0; -fx-padding: 0; -fx-border-radius: 0 10 10 0; -fx-background-radius: 0 8 8 0; -fx-cursor: hand;" styleClass="setting-button">
                                    <graphic>
                                        <ImageView fitHeight="29.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@images/settings.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
            </Pane>
        </HBox>
    </top>

    <!-- Left Region (Sidebar) -->
    <left>
        <VBox alignment="CENTER" prefWidth="250.0" style="-fx-background-color: #535353; -fx-padding: 5;" VBox.vgrow="ALWAYS">
            <!-- Chat List -->
            <StackPane fx:id="quizQuestionsContainer" prefWidth="230.0">
                <TextField fx:id="noQuizField" alignment="TOP_CENTER" editable="false" prefHeight="404.0" prefWidth="230.0" style="-fx-background-color: #535353; -fx-text-fill: white;" text="You currently have no past chats" visible="false" />
                <ListView fx:id="questionListView" prefHeight="380.0" prefWidth="264.0" style="-fx-background-color: #535353; -fx-padding: 10;" styleClass="chat-list" VBox.vgrow="ALWAYS">
                    <StackPane.margin>
                        <Insets bottom="5.0" />
                    </StackPane.margin></ListView>
            </StackPane>
            <Button fx:id="submitQuizButton" prefHeight="35.0" prefWidth="208.0"  style="-fx-background-color: #6C95DF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-cursor: hand;" styleClass="userDetailsButton" text="Submit Quiz" />
        </VBox>
    </left>

    <!-- Center Region (Chat Area) -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white;" VBox.vgrow="ALWAYS">
            <StackPane fx:id="quizListContainer1" VBox.vgrow="ALWAYS">
                <children>
                    <!-- Chat Section -->
                    <ScrollPane fx:id="quizScrollPane" fitToWidth="true" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                        <content>
                            <VBox spacing="10">
                                <VBox fx:id="quizQuestion" spacing="10" style="-fx-background-color: #98E4CF;">
                                    <Label fx:id="quizQuestionLabel" text="Placeholder" style="-fx-background-color: #98E4CF;" />
                                </VBox>

                                <VBox fx:id="quizAnswers" style="-fx-background-color: #CBD6FF; -fx-border-color: #000000;" spacing="10">
                                    <Label text="Please select one of the options" style="-fx-background-color: #CBD6FF;" />
                                    <HBox>
                                        <Button fx:id="answerA"  text="A - Placeholder" style="-fx-padding: 10;" alignment="CENTER_LEFT" />
                                        <Button fx:id="answerB"  text="B - Placeholder" style="-fx-padding: 10;" alignment="CENTER_RIGHT" />
                                    </HBox>
                                    <HBox>
                                        <Button fx:id="answerC"  text="C - Placeholder" style="-fx-padding: 10;" alignment="BOTTOM_LEFT" />
                                        <Button fx:id="answerD"  text="D - Placeholder" style="-fx-padding: 10;" alignment="BOTTOM_RIGHT" />
                                    </HBox>
                                </VBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </children>
            </StackPane>
            <!-- Chat Input -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 10; -fx-border-color: #757575; -fx-border-radius: 8; -fx-background-color: white; -fx-border-width: 1; -fx-background-radius: 8;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="chatModeButton" alignment="CENTER" disable="true" opacity="1" prefHeight="25.0" prefWidth="55.0" style="-fx-cursor: hand;" styleClass="chat-mode-disabled" text="Chat" />
                    <Button fx:id="quizModeButton" alignment="CENTER" prefHeight="27.0" prefWidth="55.0" style="-fx-cursor: hand;" styleClass="quiz-mode-active" text="Quiz" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
