<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ai.tutor.cab302exceptionalhandlers.controller.QuizController">


    <!-- Left Sidebar -->
    <left>
        <!-- Other Chat Options -->
        <VBox id="quizQuestions">
            <ListView style="-fx-background-color: #333333; -fx-padding: 10;">

            </ListView>
            <!-- User Details -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-background-color: #333333; -fx-padding: 10;">
                <Button maxWidth="-Infinity" onAction="#quizSubmit" text="Submit Quiz" />
            </VBox>
        </VBox>
    </left>

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #336699; -fx-padding: 10;">
            <ImageView fitHeight="30" fitWidth="30" />
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Chat Title" textAlignment="CENTER" alignment="TOP_CENTER" />
            <Region HBox.hgrow="ALWAYS">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets></Region>
            <TextField promptText="Search..." style="-fx-background-radius: 15; -fx-padding: 5;" alignment="TOP_RIGHT"/>
            <Button text="ðŸ”" alignment="TOP_RIGHT"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox prefHeight="396.0" prefWidth="445.0" spacing="10" style="-fx-padding: 20;">
            <!-- Quiz Question -->
            <Label fx:id = "labelQuestion" style="-fx-background-color: #CBD6FF;" text="Placeholder question">

            </Label>
            <!-- Answer Options -->
            <VBox style="-fx-background-color: #f0f0f0; -fx-border-color: #000000;">
                <Label text="Please select one of the options" style="-fx-background-color: #f0f0f0;"> </Label>
                <HBox>
                    <Button fx:id="answerA"  text="A - Placeholder" style="-fx-padding: 10;" alignment="CENTER_LEFT">

                    </Button>
                    <Button fx:id="answerB"  text="B - Placeholder" style="-fx-padding: 10;" alignment="CENTER_RIGHT">

                    </Button>
                </HBox>
                <HBox>
                    <Button fx:id="answerC"  text="C - Placeholder" style="-fx-padding: 10;" alignment="BOTTOM_LEFT">

                    </Button>
                    <Button fx:id="answerD"  text="D - Placeholder" style="-fx-padding: 10;" alignment="BOTTOM_RIGHT">

                    </Button>
                </HBox>
            </VBox>



            <!-- Chat Input -->

            <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 10; -fx-border-color: #000000;">
                <TextField fx:id="messageField" promptText="Enter Message..." HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_LEFT" spacing="10">

                    <Button text="Chat" />
                    <Button text="Quiz" />
                    <Button text="Upload File" />
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>