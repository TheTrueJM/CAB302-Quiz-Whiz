<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #CBD6FF;">

<!--The Header-->
    <HBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #336699; -fx-padding: 10;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Welcome to Quiz Whiz" textAlignment="CENTER" alignment="TOP_CENTER" />
    </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="usernameField" promptText="Username..." onKeyReleased="#onFieldChanged" />
    <TextField fx:id="passwordField" promptText="Password..." onKeyReleased="#onFieldChanged"/>
    <Button fx:id="loginButton" text="Login" onAction="#onLogin" disable="true" style="-fx-text-fill: white; -fx-background-color: #336699; -fx-font-weight: bold;"/>
    <Button text="Switch to Sign Up" onAction="#switchToSignUp" style="-fx-text-fill: white; -fx-background-color: #336699; -fx-font-weight: bold;"/>

    <!-- Logo at the end of page -->
    <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/logo-blue.png" />
        </image>
    </ImageView>


</VBox>

